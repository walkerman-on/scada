{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    // для абсолютного импорта
    "baseUrl": ".",
    // позволяет писать import без require("")
    "esModuleInterop": true,
    // позволяет писать import без * as
    "allowSyntheticDefaultImports": true,
  },
    "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}